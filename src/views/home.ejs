        <% listUsers.forEach(function(users) { %>
        <tr>
          <td><%= users.id %></td>
          <td><%= users.email %></td>
          <td><%= users.name %></td>
          <td><%= users.city %></td>
          <td>
            <button><a href="/update/<%= users.id %>">Edit</a></button>
            <form action="/delete-user/<%= users.id %>" method="POST">
              <button>Delete</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </table>
    </div>
  </body>
</html>
